@model CA2MVC.Models.Actor

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Actor</legend>

        @Html.HiddenFor(model => model.ActorID)

        <div class="editor-label">
            @Html.LabelFor(model => model.MovieID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MovieID)
            @Html.ValidationMessageFor(model => model.MovieID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ActorName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ActorName)
            @Html.ValidationMessageFor(model => model.ActorName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MovieName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MovieName)
            @Html.ValidationMessageFor(model => model.MovieName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Return Home", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
